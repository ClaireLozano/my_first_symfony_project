{% extends 'base.html.twig' %}

{% block title 'Tous nos bien' %}

{% block body %}
    <div class="jumbotron">
        <div class="container mt-4">
            <h2>Edit√© le bien</h2>
        </div>
    </div>

    <div class="container mt-4" style="margin-bottom: 4em">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">{{ form_row(form.title) }}</div>
                <div class="col-md-4">{{ form_row(form.surface) }}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_row(form.city) }}</div>
                <div class="col-md-4">{{ form_row(form.address) }}</div>
                <div class="col-md-4">{{ form_row(form.postalCode) }}</div>
            </div>
            <div class="row">
                <div class="col-md-12">{{ form_row(form.description) }}</div>
            </div>
            <div class="row">
                <div class="col-md-2">{{ form_row(form.price) }}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_row(form.sold) }}</div>
            </div>
            <button class="btn btn-primary">Editer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}