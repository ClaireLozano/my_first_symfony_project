{% extends 'base.html.twig' %}

{% block title 'Tous nos bien' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                </div>
                <div class="col-md-4">
                    <h1> {{ property.title }}</h1>
                    <p> T3 - {{ property.surface }} m²</p>
                    <div class="text-primary" style="font-size:4em; font-weight: bold;"> {{ property.price }} €</div>
                    <a href="#" class="btn btn-primary"> Contacter l'agence</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">

        <p>
            {{ property.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td> {{ property.surface }}</td>
                    </tr>
                    <tr>
                        <td>Pièce</td>
                        <td> 3 pièces</td>
                    </tr>
                    <tr>
                        <td>Etage</td>
                        <td> 4ème étage</td>
                    </tr>
                </table>
            </div>

            <div class="col-md-4">
                <h2>Spécificités</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Adresse</td>
                        <td> {{ property.address }} {{ property.postalCode }}, {{ property.city }}</td>
                    </tr>
                    <tr>
                        <td>Pièce</td>
                        <td> 3 pièces</td>
                    </tr>
                    <tr>
                        <td>Etage</td>
                        <td> 4ème étage</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}